<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/container"
    tools:context="me.thomastseng.hungry.MainActivity">

    <com.dd.CircularProgressButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cpb_cornerRadius="48dp"
        app:cpb_textComplete="Finished Searching"
        app:cpb_textError="Error"
        app:cpb_textIdle="Hit Me"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <com.dd.CircularProgressButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cpb_cornerRadius="48dp"
        app:cpb_textComplete="Finished Searching"
        app:cpb_textError="Error"
        app:cpb_textIdle="   Hit Me with Favorites   "
        android:layout_marginTop="10dp"
        android:id="@+id/favorites_search"
        android:layout_below="@+id/search_button"
        app:cpb_selectorIdle="@drawable/idle_state"
        app:cpb_colorIndicator="@color/cpb_green"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gear"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/favs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites"/>

</RelativeLayout>
